{
  "hosting": {
    "site": "pipescore",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [{
          "key":"Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }]
      },
      {
        "source": "**/*.*",
        "headers": [{
          "key":"Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }]
      }
    ]
  }
}
